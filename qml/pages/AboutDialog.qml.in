import QtQuick 2.1
import Sailfish.Silica 1.0
import "../components"

Page {
    anchors.fill: parent

    Column {
        width: parent.width

        PageHeader {
             title: "About JollaOpas"
        }

        Spacing {height: 20}

        Label {
            width: parent.width
            anchors.horizontalCenter: parent.horizontalCenter
            horizontalAlignment: Text.AlignHCenter
            font.bold: true
            text: "v@VERSION@ (@GIT_SHA@)"
        }

        Spacing {height: 20}

        Button {
            anchors.horizontalCenter: parent.horizontalCenter
            text: "Changelog"
            onClicked: {
                Qt.openUrlExternally("https://github.com/hsarkanen/JollaOpas/blob/v@VERSION@/Changelog.md")
            }
        }

        Button {
            anchors.horizontalCenter: parent.horizontalCenter
            text: "Sources on Github"
            onClicked: {
                Qt.openUrlExternally("https://github.com/hsarkanen/JollaOpas")
            }
        }

        Spacing {height: 20}

        Label {
            width: parent.width
            anchors.horizontalCenter: parent.horizontalCenter
            horizontalAlignment: Text.AlignHCenter
            wrapMode: Text.WordWrap
            text: "(c) Heikki Sarkanen" +"\n" + "<heikki.sarkanen@gmail.com>\n2014\n" +
                  qsTr("Original Author:") + "\nJukka Nousiainen\n" +
                  qsTr("Additional Credits:") + "\n" +
                  "Jani Mikkonen, " +
                  "Mohammed Sameer\n" +
                  "Clovis Scotti, " +
                  "Benoit HERVIER and\n" +
                  "Morpog"
        }

        Spacing {height: 20}

        Label {
            width: parent.width
            anchors.horizontalCenter: parent.horizontalCenter
            horizontalAlignment: Text.AlignHCenter
            wrapMode: Text.WordWrap
            text:
                qsTr("This application is free sofware licenced under the GNU Public License v3\n")  +
                qsTr("Some  parts of the code release under MIT License")
        }
    }
}
